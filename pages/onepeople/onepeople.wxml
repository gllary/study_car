<!--pages/onepeople/onepeople.wxml-->

<view class='onepeople' >
  <image src='../image/f_bgp.jpg' class='bg'></image>
  

  <view class='onepeople_txt'>
      <text class='word1'>
      “一对一学车”，享受VIP教学!
      </text>
      <text class='word2'>
      超长训练时长，教练全程指导!
      </text>
      <text class='word3'>
       挂科险保证，通过率百分百!
      </text>
  </view>

<view class='onepeople_button' bindtap='show' >
  <button class='onepeople_signup'>
立即报名参加
</button>
</view>


</view>
<!--这是一个单独的表单-->
<view class='form' hidden="{{flag}}" >
<view class='pic_back'>
  <view class='pic_abut'>
       <block wx:for="{{imgUrls}}" wx:key="{{index}}">
              <swiper-item>
                 <image bindtap="hide" class='pic_img' src="{{item}}"/>
              </swiper-item>
           </block>
    </view>
</view>

  <view class='content'>
   
    <view class='content_txt'>
      <text>{{message}}</text>
    </view>
    <view class='content_btn'>
      <button class='onlyfor_fontsize' bindtap='hide' bindtap='Toentryform' >
      开始填写
      </button>
    </view>

  </view>


</view>

